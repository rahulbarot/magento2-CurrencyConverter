<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
        <section id="currency">
        	<resource>DevAwesome_CurrencyConverter::config_mr_currencyconverter</resource>
            <group id="currencyapi" sortOrder="46" showInDefault="1" translate="label">
				<label>Currency API</label>
				<field id="api_key" type="obscure" sortOrder="10" showInDefault="1" translate="label">
					<label>API Key</label>
					<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
					<config_path>currency/currencyapi/api_key</config_path>
					<comment>Visit https://currencyapi.com to obtain an API key.</comment>
				</field>
				<field id="timeout" type="text" sortOrder="20" showInDefault="1" translate="label">
					<label>Connection Timeout in Seconds</label>
					<comment/>
				</field>
			</group>
        </section>
    </system>
</config>
